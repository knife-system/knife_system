  #iptables -A FORWARD -i $inet -p tcp --sport 995 -j ACCEPT
  #iptables -A FORWARD -o $inet -p tcp --dport 995 -j ACCEPT

  ##SSDP - Protocolo para Descoberta de Serviços Simples
  #iptables -A INPUT -i $ilan -p udp --dport 1900 -j ACCEPT

  ##SSH - Shell Seguro
